
@model TimeManagementPOE.Controllers.ModuleViewModel

@{
    // Set the title of the view
    ViewData["Title"] = "Remaining Study Hours";
}

@section Scripts {
    @{
        // Render partial validation scripts asynchronously
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        // Calculate remaining study hours and format it as needed
        var remainingStudyHours = @Html.Raw(Model.RemainingStudyHours);

        // Show the SweetAlert automatically
        swal({
            // Set the title of the SweetAlert
            title: "Remaining Study Hours",
            // Display the text with the remaining study hours and module name
            text: "Remaining study hours for @Model.Module.Name: " + remainingStudyHours,
            // Set the icon for the SweetAlert
            icon: "info"
        });
    </script>
}
